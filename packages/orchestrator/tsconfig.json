{
  "compilerOptions": {
    "target": "es2024", // compatibile ma moderno
    "module": "nodenext", // o "CommonJS" se serve supporto Node
    "moduleResolution": "nodenext",
    "lib": [
      "DOM",
      "ES2024"
    ],
    "declaration": true, // genera i .d.ts
    "outDir": "dist", // output directory
    "rootDir": "src", // sorgenti in src/
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts"
  ]
}